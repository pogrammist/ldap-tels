@model IEnumerable<ContactViewModel>

@{
    ViewData["Title"] = ViewBag.Department != null ? $"Контакты отдела {ViewBag.Department}" : "Контакты";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            @if (ViewBag.Department != null)
            {
                <a asp-action="Departments" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> К отделам
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-house"></i> На главную
            </a>
        </div>
    </div>

    @if (ViewBag.Department != null)
    {
        <div class="alert alert-info mb-4">
            Отдел: @ViewBag.Department
            <a asp-action="Contacts" class="float-end">Показать все контакты</a>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Контакты не найдены.
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body">
                <div id="contacts-container">
                    @await Html.PartialAsync("_ContactsTablePartial", Model)
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/infinite-scroll.js"></script>
}
