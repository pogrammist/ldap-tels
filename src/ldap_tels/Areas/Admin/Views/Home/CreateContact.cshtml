@model ManualContact
@{
    ViewData["Title"] = "Добавление контакта";
}

<h1>Добавление контакта</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="CreateContact" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DisplayName" class="form-label">ФИО</label>
                        <input asp-for="DisplayName" class="form-control" />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Телефон</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Подразделение</label>
                        <input name="DivisionName" class="form-control" list="divisionsList" />
                        <datalist id="divisionsList">
                            @foreach (var divisionName in ViewBag.DivisionNames ?? new List<string>())
                            {
                                <option value="@divisionName"></option>
                            }
                        </datalist>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Отдел</label>
                        <input name="DepartmentName" class="form-control" list="departmentsList" />
                        <datalist id="departmentsList">
                            @foreach (var departmentName in ViewBag.DepartmentNames ?? new List<string>())
                            {
                                <option value="@departmentName"></option>
                            }
                        </datalist>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Должность</label>
                        <input name="TitleName" class="form-control" list="titlesList" />
                        <datalist id="titlesList">
                            @foreach (var titleName in ViewBag.TitleNames ?? new List<string>())
                            {
                                <option value="@titleName"></option>
                            }
                        </datalist>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Компания</label>
                        <input name="CompanyName" class="form-control" list="companiesList" />
                        <datalist id="companiesList">
                            @foreach (var companyName in ViewBag.CompanyNames ?? new List<string>())
                            {
                                <option value="@companyName"></option>
                            }
                        </datalist>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-action="Contacts" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
