@model IEnumerable<ldap_tels.Models.Department>
@{
    ViewData["Title"] = "Отделы";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Отделы</h1>
    <div>
        <a asp-action="Contacts" class="btn btn-primary">
            <i class="bi bi-people"></i> Все контакты
        </a>
    </div>
</div>

@Html.AntiForgeryToken()
<input type="hidden" id="update-department-weight-url" value="@Url.Action("UpdateDepartmentWeight", "Home", new { area = "Admin" })" />

@if (!Model.Any())
{
    <div class="alert alert-info">
        Отделы не найдены.
    </div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Отдел</th>
                            <th>Приоритет</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <button type="button" class="btn btn-sm btn-outline-secondary me-2" 
                                                onclick="changeDepartmentWeight(@item.Id, -1)" 
                                                @(item.Weight <= 0 ? "disabled" : "")>
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        
                                        <span id="department-weight-@item.Id" class="fw-bold">@item.Weight</span>
                                        
                                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2" 
                                                onclick="changeDepartmentWeight(@item.Id, 1)" 
                                                @(item.Weight >= 100 ? "disabled" : "")>
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Department" asp-route-department="@item.Name" class="btn btn-sm btn-info">
                                        <i class="bi bi-people"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Вернуться на главную</a>
</div>

@section Scripts {
    <script src="~/js/departments.js" asp-append-version="true"></script>
}
