@model Contact
@{
    ViewData["Title"] = "Детали контакта";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Детали контакта</h1>
    <div>
        @if (!string.IsNullOrEmpty(Model.Department))
        {
            <a asp-action="ContactsByDepartment" asp-route-department="@Model.Department" class="btn btn-info">
                <i class="bi bi-people"></i> Все контакты отдела
            </a>
        }
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Основная информация</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                    
                    <dt class="col-sm-4">Отображаемое имя:</dt>
                    <dd class="col-sm-8">@Model.DisplayName</dd>
                    
                    <dt class="col-sm-4">Имя:</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>
                    
                    <dt class="col-sm-4">Фамилия:</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Телефон:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Мобильный:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Mobile))
                        {
                            <a href="tel:@Model.Mobile">@Model.Mobile</a>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Отдел:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Department))
                        {
                            <a asp-action="ContactsByDepartment" asp-route-department="@Model.Department">
                                @Model.Department
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Должность:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Title))
                        {
                            @Model.Title
                        }
                        else
                        {
                            <span class="text-muted">Не указана</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Компания:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Company))
                        {
                            @Model.Company
                        }
                        else
                        {
                            <span class="text-muted">Не указана</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Информация об источнике</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">LDAP-источник:</dt>
            <dd class="col-sm-9">
                @if (Model.LdapSource != null)
                {
                    <a asp-action="LdapSourceDetails" asp-route-id="@Model.LdapSourceId">
                        @Model.LdapSource.Name
                    </a>
                }
                else
                {
                    <span class="text-muted">Не указан</span>
                }
            </dd>
            
            <dt class="col-sm-3">Distinguished Name:</dt>
            <dd class="col-sm-9">
                <code>@Model.DistinguishedName</code>
            </dd>
            
            <dt class="col-sm-3">Последнее обновление:</dt>
            <dd class="col-sm-9">
                @Model.LastUpdated.ToString("dd.MM.yyyy HH:mm:ss")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Contacts" class="btn btn-secondary">Вернуться к списку контактов</a>
</div>
