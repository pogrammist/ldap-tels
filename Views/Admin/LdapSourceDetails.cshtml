@model LdapSource
@{
    ViewData["Title"] = "Детали LDAP-источника";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Детали LDAP-источника</h1>
    <div>
        <a asp-action="EditLdapSource" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Редактировать
        </a>
        <form asp-action="SyncLdapSource" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-arrow-repeat"></i> Синхронизировать
            </button>
        </form>
        <a asp-action="DeleteLdapSource" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Удалить
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Основная информация</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                    
                    <dt class="col-sm-4">Название:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Сервер:</dt>
                    <dd class="col-sm-8">@Model.Server</dd>
                    
                    <dt class="col-sm-4">Порт:</dt>
                    <dd class="col-sm-8">@Model.Port</dd>
                    
                    <dt class="col-sm-4">Base DN:</dt>
                    <dd class="col-sm-8">@Model.BaseDn</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Bind DN:</dt>
                    <dd class="col-sm-8">@Model.BindDn</dd>
                    
                    <dt class="col-sm-4">Пароль:</dt>
                    <dd class="col-sm-8">
                        <span class="text-muted">***********</span>
                    </dd>
                    
                    <dt class="col-sm-4">Использовать SSL:</dt>
                    <dd class="col-sm-8">
                        @if (Model.UseSSL)
                        {
                            <span class="badge bg-success">Да</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Нет</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Статус:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Активен</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Неактивен</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Последняя синхронизация:</dt>
                    <dd class="col-sm-8">
                        @if (Model.LastSyncTime != default)
                        {
                            @Model.LastSyncTime.ToString("dd.MM.yyyy HH:mm:ss")
                        }
                        else
                        {
                            <span class="text-muted">Никогда</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Фильтр поиска</h5>
    </div>
    <div class="card-body">
        <pre class="bg-light p-3 rounded">@Model.SearchFilter</pre>
    </div>
</div>

<div class="mt-4">
    <a asp-action="LdapSources" class="btn btn-secondary">Вернуться к списку источников</a>
</div>
