@model LdapSource
@{
    ViewData["Title"] = "Добавление LDAP-источника";
}

<h1>Добавление LDAP-источника</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="CreateLdapSource" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Название</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Server" class="form-label">Сервер</label>
                        <input asp-for="Server" class="form-control" />
                        <span asp-validation-for="Server" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Port" class="form-label">Порт</label>
                        <input asp-for="Port" class="form-control" type="number" />
                        <span asp-validation-for="Port" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="BaseDn" class="form-label">Base DN</label>
                        <input asp-for="BaseDn" class="form-control" />
                        <span asp-validation-for="BaseDn" class="text-danger"></span>
                        <small class="form-text text-muted">Например: DC=example,DC=com</small>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BindDn" class="form-label">Bind DN</label>
                        <input asp-for="BindDn" class="form-control" />
                        <span asp-validation-for="BindDn" class="text-danger"></span>
                        <small class="form-text text-muted">Имя пользователя для подключения к LDAP</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="BindPassword" class="form-label">Пароль</label>
                        <input asp-for="BindPassword" class="form-control" type="password" />
                        <span asp-validation-for="BindPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SearchFilter" class="form-label">Фильтр поиска</label>
                        <input asp-for="SearchFilter" class="form-control" />
                        <span asp-validation-for="SearchFilter" class="text-danger"></span>
                        <small class="form-text text-muted">Например: (&(objectClass=person)(|(sn=*)(cn=*)))</small>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="UseSSL" class="form-check-input" type="checkbox" />
                        <label asp-for="UseSSL" class="form-check-label">Использовать SSL</label>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">Активен</label>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-action="LdapSources" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
