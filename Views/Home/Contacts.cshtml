@model IEnumerable<ldap_tels.Models.Contact>

@{
    ViewData["Title"] = "Контакты";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Контакты</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Контакты не найдены.
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ФИО</th>
                                <th>Подразделение</th>
                                <th>Отдел</th>
                                <th>Должность</th>
                                <th>Телефон</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr>
                                    <td>@contact.DisplayName</td>
                                    <td>@contact.Division</td>
                                    <td>
                                        <a asp-action="Department" asp-route-department="@contact.Department">
                                            @contact.Department
                                        </a>
                                    </td>
                                    <td>@contact.Title</td>
                                    <td>@contact.PhoneNumber</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(contact.Email))
                                        {
                                            <a href="mailto:@contact.Email">@contact.Email</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Contacts" asp-route-page="1">
                                &laquo;
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="Contacts" asp-route-page="@(ViewBag.CurrentPage - 1)">
                                &lt;
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Contacts" asp-route-page="@i">
                                @i
                            </a>
                        </li>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Contacts" asp-route-page="@(ViewBag.CurrentPage + 1)">
                                &gt;
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="Contacts" asp-route-page="@ViewBag.TotalPages">
                                &raquo;
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
