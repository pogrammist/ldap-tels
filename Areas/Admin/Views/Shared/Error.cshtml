@model ldap_tels.Models.ErrorViewModel

@{
    ViewData["Title"] = "Ошибка";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Ошибка</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Произошла ошибка при обработке вашего запроса.</h5>
                    
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger mt-3">
                            @Model.Message
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться на главную
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
