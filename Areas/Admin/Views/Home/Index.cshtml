@model IEnumerable<ldap_tels.Models.LdapSource>

@{
    ViewData["Title"] = "Главная";
}

<div class="container">
    <h1 class="mb-4">Панель управления</h1>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">LDAP-источники</h5>
                    <p class="card-text display-4">@Model.Count()</p>
                    <a asp-area="Admin" asp-controller="Home" asp-action="LdapSources" class="btn btn-light">Управление источниками</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Контакты</h5>
                    <p class="card-text display-4">@ViewBag.TotalContacts</p>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Contacts" class="btn btn-light">Просмотр контактов</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Отделы</h5>
                    <p class="card-text display-4">@ViewBag.TotalDepartments</p>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Departments" class="btn btn-light">Просмотр отделов</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">LDAP-источники</h5>
                    <div>
                        <a asp-area="Admin" asp-controller="Home" asp-action="CreateLdapSource" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-circle"></i> Добавить источник
                        </a>
                        <form asp-area="Admin" asp-controller="Home" asp-action="SyncAllLdapSources" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-arrow-repeat"></i> Синхронизировать все
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning">
                            LDAP-источники не найдены. <a asp-area="Admin" asp-controller="Home" asp-action="CreateLdapSource">Добавить новый источник</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Сервер</th>
                                        <th>Порт</th>
                                        <th>Статус</th>
                                        <th>Последняя синхронизация</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var source in Model)
                                    {
                                        <tr>
                                            <td>@source.Name</td>
                                            <td>@source.Server</td>
                                            <td>@source.Port</td>
                                            <td>
                                                @if (source.IsActive)
                                                {
                                                    <span class="badge bg-success">Активен</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Неактивен</span>
                                                }
                                            </td>
                                            <td>@source.LastSyncTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-area="Admin" asp-controller="Home" asp-action="LdapSourceDetails" asp-route-id="@source.Id" class="btn btn-sm btn-info">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="Home" asp-action="EditLdapSource" asp-route-id="@source.Id" class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form asp-area="Admin" asp-controller="Home" asp-action="SyncLdapSource" asp-route-id="@source.Id" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-arrow-repeat"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
