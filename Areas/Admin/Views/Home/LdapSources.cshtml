@model IEnumerable<ad_tels.Models.LdapSource>

@{
    ViewData["Title"] = "LDAP-источники";
}

<div class="container">
    <h1 class="mb-4">LDAP-источники</h1>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="CreateLdapSource" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить источник
        </a>
        <form asp-area="Admin" asp-controller="Home" asp-action="SyncAllLdapSources" method="post" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-arrow-repeat"></i> Синхронизировать все
            </button>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            LDAP-источники не найдены. <a asp-area="Admin" asp-controller="Home" asp-action="CreateLdapSource">Добавить новый источник</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Сервер</th>
                        <th>Порт</th>
                        <th>Base DN</th>
                        <th>Статус</th>
                        <th>Последняя синхронизация</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var source in Model)
                    {
                        <tr>
                            <td>@source.Name</td>
                            <td>@source.Server</td>
                            <td>@source.Port</td>
                            <td>@source.BaseDn</td>
                            <td>
                                @if (source.IsActive)
                                {
                                    <span class="badge bg-success">Активен</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Неактивен</span>
                                }
                            </td>
                            <td>@source.LastSyncTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-controller="Home" asp-action="LdapSourceDetails" asp-route-id="@source.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Home" asp-action="EditLdapSource" asp-route-id="@source.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Home" asp-action="DeleteLdapSource" asp-route-id="@source.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Home" asp-action="SyncLdapSource" asp-route-id="@source.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="bi bi-arrow-repeat"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
