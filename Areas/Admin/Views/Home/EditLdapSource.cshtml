@model ldap_tels.Models.LdapSource

@{
    ViewData["Title"] = "Редактирование LDAP-источника";
}

<div class="container">
    <h1 class="mb-4">Редактирование LDAP-источника</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Home" asp-action="EditLdapSource" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="LastSyncTime" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Название</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Server" class="control-label">Сервер</label>
                            <input asp-for="Server" class="form-control" />
                            <span asp-validation-for="Server" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Port" class="control-label">Порт</label>
                            <input asp-for="Port" class="form-control" />
                            <span asp-validation-for="Port" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BaseDn" class="control-label">Base DN</label>
                            <input asp-for="BaseDn" class="form-control" />
                            <span asp-validation-for="BaseDn" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BindDn" class="control-label">Bind DN</label>
                            <input asp-for="BindDn" class="form-control" />
                            <span asp-validation-for="BindDn" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BindPassword" class="control-label">Пароль</label>
                            <input asp-for="BindPassword" class="form-control" type="password" />
                            <span class="text-muted">Оставьте пустым, чтобы сохранить текущий пароль</span>
                            <span asp-validation-for="BindPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SearchFilter" class="control-label">Фильтр поиска</label>
                            <input asp-for="SearchFilter" class="form-control" />
                            <span asp-validation-for="SearchFilter" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="UseSSL" class="form-check-input" />
                                <label asp-for="UseSSL" class="form-check-label">Использовать SSL</label>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Активен</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                            <a asp-area="Admin" asp-controller="Home" asp-action="LdapSources" class="btn btn-secondary">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Информация</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> @Model.Id</p>
                    <p><strong>Последняя синхронизация:</strong> @Model.LastSyncTime.ToString("dd.MM.yyyy HH:mm:ss")</p>
                    <form asp-area="Admin" asp-controller="Home" asp-action="SyncLdapSource" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-arrow-repeat"></i> Синхронизировать
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Справка</h5>
                </div>
                <div class="card-body">
                    <p><strong>Название</strong> - понятное название для источника данных.</p>
                    <p><strong>Сервер</strong> - IP-адрес или доменное имя LDAP-сервера.</p>
                    <p><strong>Порт</strong> - порт LDAP-сервера (обычно 389 или 636 для SSL).</p>
                    <p><strong>Base DN</strong> - базовый DN для поиска пользователей.</p>
                    <p><strong>Bind DN</strong> - DN пользователя для подключения к LDAP.</p>
                    <p><strong>Пароль</strong> - пароль пользователя для подключения.</p>
                    <p><strong>Фильтр поиска</strong> - LDAP-фильтр для поиска пользователей.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
