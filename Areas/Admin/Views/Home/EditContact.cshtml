@model ManualContact
@{
    ViewData["Title"] = "Редактирование контакта";
}

<h1>Редактирование контакта</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="EditContact" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="DisplayName" class="form-label">ФИО</label>
                        <input asp-for="DisplayName" class="form-control" />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Телефон</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Подразделение</label>
                        <input type="text" name="DivisionName" class="form-control" list="divisionsList" 
                            value="@(Model.Division?.Name ?? "")" />
                        <datalist id="divisionsList">
                            @foreach (var div in ViewBag.DivisionNames ?? new List<string>())
                            {
                                <option value="@div" data-id="@div">@div</option>
                            }
                        </datalist>
                        @* <input type="hidden" name="DivisionId" value="@Model.DivisionId" /> *@
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Отдел</label>
                        <input type="text" name="DepartmentName" class="form-control" list="departmentsList" 
                            value="@(Model.Department?.Name ?? "")" />
                        <datalist id="departmentsList">
                            @foreach (var dept in ViewBag.DepartmentNames ?? new List<string>())
                            {
                                <option value="@dept" data-id="@dept">@dept</option>
                            }
                        </datalist>
                        @* <input type="hidden" name="DepartmentId" value="@Model.DepartmentId" /> *@
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Должность</label>
                        <input type="text" name="TitleName" class="form-control" list="titlesList" 
                            value="@(Model.Title?.Name ?? "")" />
                        <datalist id="titlesList">
                            @foreach (var title in ViewBag.TitleNames ?? new List<string>())
                            {
                                <option value="@title" data-id="@title">@title</option>
                            }
                        </datalist>
                        @* <input type="hidden" name="TitleId" value="@Model.TitleId" /> *@
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Компания</label>
                        <input type="text" name="CompanyName" class="form-control" list="companiesList" 
                            value="@(Model.Company?.Name ?? "")" />
                        <datalist id="companiesList">
                            @foreach (var company in ViewBag.CompanyNames ?? new List<string>())
                            {
                                <option value="@company" data-id="@company">@company</option>
                            }
                        </datalist>
                        @* <input type="hidden" name="CompanyId" value="@Model.CompanyId" /> *@
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-action="ContactDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
