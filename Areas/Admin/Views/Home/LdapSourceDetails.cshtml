@model ldap_tels.Models.LdapSource

@{
    ViewData["Title"] = "Детали LDAP-источника";
}

<div class="container">
    <h1 class="mb-4">Детали LDAP-источника</h1>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="LdapSources" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад к списку
        </a>
        <a asp-area="Admin" asp-controller="Home" asp-action="EditLdapSource" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Редактировать
        </a>
        <a asp-area="Admin" asp-controller="Home" asp-action="DeleteLdapSource" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Удалить
        </a>
        <form asp-area="Admin" asp-controller="Home" asp-action="SyncLdapSource" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-arrow-repeat"></i> Синхронизировать
            </button>
        </form>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Основная информация</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Название</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Статус</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Активен</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Неактивен</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Последняя синхронизация</dt>
                        <dd class="col-sm-8">@Model.LastSyncTime.ToString("dd.MM.yyyy HH:mm:ss")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Настройки подключения</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Сервер</dt>
                        <dd class="col-sm-8">@Model.Server</dd>

                        <dt class="col-sm-4">Порт</dt>
                        <dd class="col-sm-8">@Model.Port</dd>

                        <dt class="col-sm-4">Использовать SSL</dt>
                        <dd class="col-sm-8">
                            @if (Model.UseSSL)
                            {
                                <span class="badge bg-success">Да</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Нет</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Base DN</dt>
                        <dd class="col-sm-8">@Model.BaseDn</dd>

                        <dt class="col-sm-4">Bind DN</dt>
                        <dd class="col-sm-8">@Model.BindDn</dd>

                        <dt class="col-sm-4">Фильтр поиска</dt>
                        <dd class="col-sm-8"><code>@Model.SearchFilter</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
